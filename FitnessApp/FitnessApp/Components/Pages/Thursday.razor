@page "/Thursday"
<h1>Thursday</h1>
<h2>Core workout</h2>

<table class="table">
    <thead>
        <tr style="cursor:pointer;">
            <th>Type</th>
            <th>Exercise</th>
            <th>Duration</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Exercise exercise in Workout)
        {
            <tr style="cursor:pointer">
                <td>@exercise.type</td>
                <td>@exercise.exercise</td>
                <td>@exercise.duration</td>
                <td>@exercise.notes</td>
            </tr>

        }
    </tbody>
</table>

@code {
    class Exercise
    {
        public string type;
        public string exercise;
        public string duration;
        public string notes;

        public Exercise(string Type, string Exercise, string Duration, string Notes)
        {
            type = Type; exercise = Exercise; duration = Duration; notes = Notes;
        }
    }
    List<Exercise> Workout = new List<Exercise>();

    protected override void OnInitialized()
    {
        Workout.Add(new Exercise("Warm-up", "Pelvic Tilts", "1 min", "Lie on your back, knees bent. Gently rock pelvis to flatten lower back against floor. Wake up deep core."));
        Workout.Add(new Exercise("Warm-up", "Dead Bug (no weights)", "2 min", "Arms up, knees bent 90°. Extend opposite arm/leg slowly without arching your back. Focus on control."));
        Workout.Add(new Exercise("Warm-up", "Bird Dog", "2 min", "Extend opposite arm and leg, pause, return. Engage abs to keep hips stable."));
        Workout.Add(new Exercise("Warm-up", "Glute Bridge March", "2 min", "In glute bridge position, lift one foot at a time without letting hips drop. Great for core + glutes."));
        Workout.Add(new Exercise("Warm-up", "Standing Arm/Leg Reach", "2 min", "Stand tall, reach one arm overhead while lifting opposite leg. Alternate sides to activate cross-core and balance."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Core Stability and Control", "Forearm Plank (Knees or Toes)", "40 sec on/20 sec rest, 3 sets", "Keep back flat, tuck pelvis slightly. Don't let hips sag."));
        Workout.Add(new Exercise("Core Stability and Control", "Side Plank (Modified or Full)", "40 sec on/20 sec rest, 3 sets", "Stack hips, elbow under shoulder. Hold on knees or full side."));
        Workout.Add(new Exercise("Core Stability and Control", "Dead Bug (Weighted)", "40 sec on/20 sec rest, 3 sets", "Add light dumbbells for challenge. Keep movement slow and precise."));
        Workout.Add(new Exercise("Core Stability and Control", "Glute Bridge Hold + Pulses", "40 sec on/20 sec rest, 3 sets", "Squeeze glutes, keep ribs down. Pulse small at the top."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Dynamic Core Strength", "Slow Mountain Climbers", "40 sec on/20 sec rest, 3 sets", "Core tight, bring one knee at a time toward chest, slow and steady."));
        Workout.Add(new Exercise("Dynamic Core Strength", "Dumbbell Weighted Sit-Back", "40 sec on/20 sec rest, 3 sets", "Sit on floor, lean back to tension zone (no floor touch), hold weight at chest. Sit up only partway."));
        Workout.Add(new Exercise("Dynamic Core Strength", "Leg Lower (1 Leg at a Time or Both)", "40 sec on/20 sec rest, 3 sets", "Lie on back, lower one or both legs without arching back. Hands under hips if needed."));
        Workout.Add(new Exercise("Dynamic Core Strength", "Standing Oblique Crunch (Light DB optional)", "40 sec on/20 sec rest, 3 sets", "Stand tall, lift knee to elbow on same side. Control, don't lean too far."));
        Workout.Add(new Exercise("Dynamic Core Strength", "Bird Dog Hold (3 sec hold each rep)", "40 sec on/20 sec rest, 3 sets", "Repeat from warm-up with longer holds for strength."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Balance and Rotational Stability", "Single-Leg Balance Reach", "10 reps/leg, 3 sets", "Stand on one leg, reach opposite hand down and forward. Keep back flat. Great for core + hips."));
        Workout.Add(new Exercise("Balance and Rotational Stability", "Plank with Shoulder Taps", "40 sec on/20 sec rest, 3 sets", "From forearm or high plank, tap one shoulder at a time. Avoid twisting."));
        Workout.Add(new Exercise("Balance and Rotational Stability", "Side-Lying Leg Raises", "12 reps/leg, 3 sets", "Focus on hips, but activates obliques too. Lift and lower slowly."));
        Workout.Add(new Exercise("Balance and Rotational Stability", "Side-lying Leg Kick", "12 reps/leg, 3 sets", "Lie on the side, bottom leg bend at 90 degrees, kick the top leg to the front with 90 degree flex at the ankle, kick the leg back with a pointy toe"));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Finishers", "Glute Bridge March", "10 reps/leg, 3 sets", ""));
        Workout.Add(new Exercise("Finishers", "Dead Bug (Fast tempo)", "10 reps/leg, 3 sets", ""));
        Workout.Add(new Exercise("Finishers", "Side Plank Dips (from knees or feet)", "10 reps/leg, 3 sets", ""));
        Workout.Add(new Exercise("Finishers", "Standing Knee Drives (fast pace)", "15 reps/leg, 3 sets", ""));
        Workout.Add(new Exercise("Finishers", "Plank ", "30 sec hold, 3 sets", ""));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Cool Down and Stretching", "Child’s Pose or Supine Knees to Chest", "1-2 min", "Choose whichever feels best for your back."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Seated Forward Fold (Hamstring Stretch)", "1 min", "Keep back straight, lean from hips."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Cat-Cow (Gentle)", "1-2 min", "Slowly alternate between arching and rounding your back. Breathe deeply."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Supine Twist (Gentle)", "1 min", "Lying down, bring knees to one side. Keep shoulder blades down. Only go as far as feels good."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Side Bend Stretch (Standing or Seated)", "1 min", "Stretch side body, avoid leaning backward."));
    }
}