@using FitnessApp.Database
@inject FitnessContext Context
@page "/Friday"
<h1>Friday</h1>
<h2>Full Body Dumbbell workout</h2>

<table class="table">
    <thead>
        <tr style="cursor:pointer;">
            <th>Type</th>
            <th>Exercise</th>
            <th>Duration</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Exercise exercise in Workout)
        {
            <tr style="cursor:pointer">
                <td>@exercise.type</td>
                <td>@exercise.exercise</td>
                <td>@exercise.duration</td>
                <td>@exercise.notes</td>
            </tr>

        }
    </tbody>
</table>

@code {
    class Exercise
    {
        public string type;
        public string exercise;
        public string duration;
        public string notes;

        public Exercise(string Type, string Exercise, string Duration, string Notes)
        {
            type = Type; exercise = Exercise; duration = Duration; notes = Notes;
        }
    }
    List<Exercise> Workout = new List<Exercise>();

    protected override void OnInitialized()
    {
        Workout.Add(new Exercise("Warm-up", "Bodyweight Glute Bridge", "12 reps, 2 sets", "Lie on your back, knees bent, feet flat on the floor. Push through heels to lift hips. Helps activate glutes and protect your lower back."));
        Workout.Add(new Exercise("Warm-up", "Bird-Dog", "10 reps, 2 sets", "On all fours, extend opposite arm and leg. Pause and return. Stabilizes core and warms up spine gently."));
        Workout.Add(new Exercise("Warm-up", "Arm Circles + Shoulder Rolls", "30 sec each direction", "Loosens shoulders and upper back."));
        Workout.Add(new Exercise("Warm-up", "Bodyweight Squats", "15 reps, 2 sets", "Slow and controlled. Engage core to protect the lower back."));
        Workout.Add(new Exercise("Warm-up", "Torso Twists (Standing)", "1 min", "Loosens the spine with gentle rotation."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Superset 1 - Upper Body", "Dumbbell Floor Chest Press", "10–12 reps, 3 sets", "Lie on your back on the floor, dumbbells in both hands. Lower elbows to the floor, then press up. Safer than bench press for lower back."));
        Workout.Add(new Exercise("Superset 1 - Upper Body", "Dumbbell One-Arm Row (Knee on Bench or Chair)", "10 reps, 3 sets", "Keep one knee and one hand on a bench or chair. Pull dumbbell up to your waist. Keep back straight, avoid twisting."));
        Workout.Add(new Exercise("Superset 1 - Upper Body", "Dumbbell Shoulder Press (Seated)", "8-10 reps, 3 sets", "Sit on a chair with back support. Press dumbbells overhead. Sitting minimizes spinal loading."));
        Workout.Add(new Exercise("Superset 1 - Upper Body", "Dumbbell Lateral Raise", "12–15 reps, 3 sets", "Stand or sit upright. Lift dumbbells out to the sides to shoulder height. Focus on form, go light."));


        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Superset 2 - Lower Body", "Dumbbell Goblet Squat", "10-12 reps, 3 sets", "Hold a dumbbell close to your chest. Feet shoulder-width apart, squat down keeping chest tall and back neutral."));
        Workout.Add(new Exercise("Superset 2 - Lower Body", "Dumbbell Reverse Lunges", "8–10/leg, 3 sets", "Hold dumbbells at your sides, Step one leg back and lower your body until both knees are at about 90°, Push through the front heel to return to standing, Alternate legs or do all reps on one side."));
        Workout.Add(new Exercise("Superset 2 - Lower Body", "Dumbbell Romanian Deadlift", "10-12 reps, 3 sets", "Hold dumbbells in front of thighs. Soften knees, push hips back (not down), keep back straight, lower dumbbells to mid-shin. Return by squeezing glutes."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Superset 3 - Core", "Dumbbell Deadbug (Core Stability)", "10 reps/leg, 3 sets", "Lie on back, knees up. Hold light dumbbells in hands. Extend opposite arm and leg, then return. Keep your lower back pressed into the floor."));
        Workout.Add(new Exercise("Superset 3 - Core", "Side Plank (Bodyweight)", "20-30 sec/side, 3 sets", "Strengthens obliques and core without spinal compression."));
        Workout.Add(new Exercise("Superset 3 - Core", "Dumbbell Farmer’s Carry", "30 sec, 3 sets", "Hold moderate dumbbells at your sides. Walk slowly, upright, and controlled. Great for posture and core bracing."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Cool Down", "Cat-Cow Stretch", "30 sec", "On all fours, alternate arching and rounding the back. Gentle spinal movement."));
        Workout.Add(new Exercise("Cool Down", "Seated Hamstring Stretch", "30 sec/leg", "Keep back straight as you lean toward extended leg."));
        Workout.Add(new Exercise("Cool Down", "Figure 4 Glute Stretch", "30 sec/leg", "Lie on back, cross ankle over opposite knee. Pull leg toward you."));
        Workout.Add(new Exercise("Cool Down", "Child’s Pose", "1 min", "Relax hips back, arms forward. Great for spinal decompression."));
        Workout.Add(new Exercise("Cool Down", "Shoulder Stretch + Neck Rolls", "1 min", "Finish with gentle upper body relaxation."));
    }
}