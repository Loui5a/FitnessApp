@page "/Saturday"
<h1>Saturday</h1>
<h2>Cardio workout</h2>

<table class="table">
    <thead>
        <tr style="cursor:pointer;">
            <th>Type</th>
            <th>Exercise</th>
            <th>Duration</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Exercise exercise in Workout)
        {
            <tr style="cursor:pointer">
                <td>@exercise.type</td>
                <td>@exercise.exercise</td>
                <td>@exercise.duration</td>
                <td>@exercise.notes</td>
            </tr>

        }
    </tbody>
</table>

@code {
    class Exercise
    {
        public string type;
        public string exercise;
        public string duration;
        public string notes;

        public Exercise(string Type, string Exercise, string Duration, string Notes)
        {
            type = Type; exercise = Exercise; duration = Duration; notes = Notes;
        }
    }
    List<Exercise> Workout = new List<Exercise>();

    protected override void OnInitialized()
    {
        Workout.Add(new Exercise("Warm-up", "Arm Circles", "30 sec forward + 30 sec backward", "Keep shoulders relaxed"));
        Workout.Add(new Exercise("Warm-up", "Shoulder Rolls", "30 sec forward + 30 sec backward", "Keep shoulders relaxed"));
        Workout.Add(new Exercise("Warm-up", "Neck Tilts", "30 sec", "Keep shoulders relaxed"));
        Workout.Add(new Exercise("Warm-up", "Neck Turns", "30 sec", "Keep shoulders relaxed"));
        Workout.Add(new Exercise("Warm-up", "Wall Angels", "1 min", "Keep shoulders relaxed"));
        Workout.Add(new Exercise("Warm-up", "Shoulder Shrugs", "1 min", "Keep shoulders relaxed"));
        Workout.Add(new Exercise("Warm-up", "Cat-Cow", "1 min", "Keep shoulders relaxed"));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("CIRCUIT 1 – Steady-State Cardio", "Step Touch (side to side)", "1 min", "Step one foot out to the side, then bring the other foot to meet it. Swing arms naturally or bring them to chest level for light resistance."));
        Workout.Add(new Exercise("CIRCUIT 1 – Steady-State Cardio", "March + Arm Swings", "1 min", "March in place while swinging arms forward and backward. Keep movements controlled. Great for full-body rhythm and coordination."));
        Workout.Add(new Exercise("CIRCUIT 1 – Steady-State Cardio", "Low Knee Lifts", "1 min", "Lift one knee at a time toward your chest, only to a height that feels safe. Keep core engaged and avoid leaning back."));
        Workout.Add(new Exercise("CIRCUIT 1 – Steady-State Cardio", "Punch Forward + Side Step", "1 min", "Step to one side while punching forward with the opposite arm. Keep core tight and shoulders relaxed."));
        Workout.Add(new Exercise("CIRCUIT 1 – Steady-State Cardio", "Heel Digs", "1 min", "Tap one heel forward while pulling your arms back. Alternate legs. Great for engaging hamstrings without strain.."));
        Workout.Add(new Exercise("CIRCUIT 1 – Steady-State Cardio", "Break / Repeat", "30 sec break, 2 sets in total", "Rest or light march, then repeat this circuit once."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise(" CIRCUIT 2 – Cardio and Core Stability", "Standing Knee-to-Elbow (cross-body)", "1 min", "Lift right knee while bringing left elbow toward it. Keep movement slow and controlled to engage your obliques and stabilize your back."));
        Workout.Add(new Exercise(" CIRCUIT 2 – Cardio and Core Stability", "Standing Leg Extensions", "1 min", "Extend one leg forward and return. Alternate legs. Keep core tight and avoid leaning forward or backward."));
        Workout.Add(new Exercise(" CIRCUIT 2 – Cardio and Core Stability", "Side Leg Raises", "1 min", "Stand tall and lift one leg to the side (no higher than hip level). Use a wall or chair for balance if needed. Focus on glutes and outer thighs."));
        Workout.Add(new Exercise(" CIRCUIT 2 – Cardio and Core Stability", "Wall Sit", "1 min", "Lean back against a wall, slide down until your thighs are almost parallel to the floor. Keep knees over ankles. Stop if you feel back pain."));
        Workout.Add(new Exercise(" CIRCUIT 2 – Cardio and Core Stability", "Toe Taps (seated or standing)", "1 min", "Tap toes forward one at a time while seated (or standing for more intensity). Engage core and keep posture upright."));
        Workout.Add(new Exercise(" CIRCUIT 2 – Cardio and Core Stability", "Break / Repeat", "30 sec break, 2 sets in total", "Rest or light march, then repeat this circuit once."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("CIRCUIT 3 – Interval Boosters (Gentle HIIT Style)", "March in Place (Fast Pace)", "45 sec on/15 sec rest", "Increase your marching speed, keeping knees lower if needed. Arms can pump to elevate heart rate."));
        Workout.Add(new Exercise("CIRCUIT 3 – Interval Boosters (Gentle HIIT Style)", "Step Jacks", "45 sec on/15 sec rest", "Step one foot out to the side while raising both arms overhead (like a jumping jack without jumping). Return and switch sides."));
        Workout.Add(new Exercise("CIRCUIT 3 – Interval Boosters (Gentle HIIT Style)", "Side Lunges (shallow)", "45 sec on/15 sec rest", "Step to the right, bending your right knee slightly while keeping the left leg straight. Push off to return to center and switch sides. Only bend as much as feels safe.."));
        Workout.Add(new Exercise("CIRCUIT 3 – Interval Boosters (Gentle HIIT Style)", "Standing Boxer Shuffle", "45 sec on/15 sec rest", "Shift your weight side to side or gently bounce in place. Light foot movement with soft knees. Shadowbox with your fists to add upper body cardio."));
        Workout.Add(new Exercise("CIRCUIT 3 – Interval Boosters (Gentle HIIT Style)", "Repeat Circuit", "1 min rest", "Repeat all 4 exercises once more for a total of ~10 minutes."));

        Workout.Add(new Exercise("", "", "", ""));

        Workout.Add(new Exercise("Cool Down and Stretching", "Deep Breathing + Gentle March", "1-2 min", "Slow down with deep inhales and exhales, marching lightly."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Standing Hamstring Stretch", "1 min/leg", "Place one heel forward, toes up, and bend gently at the hips. Keep back straight and avoid rounding."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Calf Stretch (Wall or Step)", "1 min/leg", "Lean against a wall or step one foot back, pressing heel down. Feel the stretch in the back leg's calf."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Hip Flexor Stretch", "1 min/leg", "Step one leg forward (like a lunge) and gently press hips forward. Use a wall for support. Keep your spine upright."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Child’s Pose ", "1-2 min", "Kneel and lower your hips back toward your heels, reaching arms forward. Skip this if it strains your lower back."));
        Workout.Add(new Exercise("Cool Down and Stretching", "Supine Knee Rocks", "2 min", "Lie on your back with knees bent. Gently rock knees side to side. Keep it small and controlled to loosen the lower back."));

    }
}
